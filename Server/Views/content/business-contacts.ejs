<div class="container">
    <h1><%= title %></h1>
    <hr>
    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Email</th>
                    </tr>
                </thead>
                <tbody id="businessList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < businessContacts.length; count++) { %>
                    <tr>
                        <th scope="row" class="text-center"><%= count + 1 %></th>
                        <td><%= businessContacts[count].Name %></td>
                        <td><%= businessContacts[count].Number %></td>
                        <td><%= businessContacts[count].Email %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>