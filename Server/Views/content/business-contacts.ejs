<div class="container">
    <div class="title">
        <h1><%= title %></h1>
        <hr />
    </div>
    
    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Email</th>
                        <th scope="col" id="businessedit">Edit</th>
                        <th scope="col" id="businessedit">Delete</th>
                    </tr>
                </thead>
                <tbody id="businessList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < businessContacts.length; count++) { %>
                    <tr>
                        <th scope="row" class="text-center"><%= count + 1 %></th>
                        <td><%= businessContacts[count].Name %></td>
                        <td><%= businessContacts[count].Number %></td>
                        <td><%= businessContacts[count].Email %></td>
                        <!--
                            @https://www.mongodb.com/docs/manual/reference/operator/aggregation/count/
                        -->
                        <td><a href="/business-edit/<%= businessContacts[count]._id %>" type="button"
                                id="businessedit"><i class="fa-solid fa-user-pen fa-lg"></i></a></td>
                        <td><a href="/business-contacts/business-delete/<%= businessContacts[count]._id %>" type="button"
                                id="businessdelete"><i class="fa-solid fa-trash-can fa-lg"></i></a></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>